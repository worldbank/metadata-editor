{
  "$id": "https://ihsn.org/schemas/microdata/1.0.0",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Microdata schema",
  "id": "survey-schema.json",
  "version": "1.0.0",
  "description": "Schema for Survey data type based on DDI 2.5",
  "allOf": [   
    {
      "$ref": "ddi-schema.json"
    },
    {
      "type": "object",
      "properties": {
        "datacite": {
          "type": "object",
          "description": "DataCite metadata for generating DOI",
          "$ref": "datacite-schema.json"
        },
        "provenance": {
          "type": "array",
          "description": "Provenance",
          "items": {
            "$ref": "provenance-schema.json"
          }
        },
        "tags": {
          "type": "array",
          "title": "Tags (user-defined)",
          "description": "Tags",
          "items": {
            "type": "object",
            "properties": {
              "tag": {
                "title": "Tag",
                "type": "string"
              },
              "tag_group": {
                "title": "Tag group",
                "type": "string"
              }
            }
          },
          "required": [
            "tag"
          ]
        },
        
        "additional": {
          "type": "object",
          "description": "Additional metadata not covered by DDI elements",
          "properties": {}
        }
      }
    }
  ]
}