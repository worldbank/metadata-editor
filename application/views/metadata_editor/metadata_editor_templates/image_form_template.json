{
    "type": "template",
    "title": "Image project",
    "items": [
        {
            "type": "section_container",
            "key": "image",
            "title": "Image",
            "expanded": true,
            "items": [
                {
                    "type": "section",
                    "key": "metadata_information",
                    "title": "Document description",
                    "class": "recommended",
                    "items": [
                        {
                            "key": "metadata_information.title",
                            "title": "Title",
                            "type": "text",
                            "class": "required",
                            "help_text": "Document title"
                        },
                        {
                            "key": "metadata_information.idno",
                            "title": "IDNO",
                            "type": "text",
                            "class": "required",
                            "help_text": "Unique ID number for the document"
                        },
                        {
                            "key": "metadata_information.producers",
                            "title": "List of producers",
                            "type": "array",
                            "props": {
                                "name": {
                                    "key": "name",
                                    "title": "Name",
                                    "class": "required",
                                    "required": true,
                                    "type": "text"
                                },
                                "abbr": {
                                    "key": "abbr",
                                    "title": "Abbrevation",
                                    "type": "text"
                                },
                                "affiliation": {
                                    "key": "affiliation",
                                    "title": "Affiliation",
                                    "type": "text"
                                },
                                "role": {
                                    "key": "role",
                                    "title": "Role",
                                    "type": "text"
                                }
                            }
                        },
                        {
                            "key": "metadata_information.production_date",
                            "title": "Date of Production",
                            "type": "text",
                            "class": "required",
                            "help_text": "Document production date using format(YYYY-MM-DD)"
                        },
                        {
                            "key": "metadata_information.version",
                            "title": "Document version",
                            "type": "text",
                            "class": "required",
                            "help_text": "Identify and describe the current version of the document"
                        }
                    ]
                },
                {
                    "type": "section",
                    "key": "identification",
                    "title": "Identification",
                    "class": "recommended",
                    "items": [
                        {
                            "key": "image_description.idno",
                            "title": "IDNO",
                            "type": "text",
                            "class": "required",
                            "required": true,
                            "help_text": "Unique ID number for the image",
                            "rules": "required|idno|alpha_dash|min:5|max:80"
                        },                        
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.title",
                            "title": "Title",
                            "type": "text",
                            "class": "required",
                            "help_text": "A shorthand reference for the digital image. Title provides a short human readable name which can be a text and/or numeric reference. It is not the same as Headline."
                        }                                             
                    ]
                },
                {
                    "type": "section",
                    "key": "description",
                    "title": "Image Description",
                    "class": "recommended",
                    "items": [
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.creatorNames",
                            "title": "Creator Names",
                            "type": "simple_array",
                            "class": "required",
                            "help_text": "Contains the name of the photographer, but in cases where the photographer should not be identified the name of a company or organisation may be appropriate."
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.dateCreated",
                            "title": "Date Created",
                            "type": "text",
                            "class": "required",
                            "help_text": "Designates the date and optionally the time the content of the image was created rather than the date of the creation of the digital representation."
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.description",
                            "title": "Description",
                            "type": "textarea",
                            "class": "required",
                            "help_text": "A textual description, including captions, of the image."
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.digitalImageGuid",
                            "title": "Digital Image GUID",
                            "type": "text",
                            "help_text": "Globally unique identifier for this digital image. It is created and applied by the creator of the digital image at the time of its creation . This value shall not be changed after that time."
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.headline",
                            "title": "Headline",
                            "type": "text",
                            "class": "required",
                            "help_text": "A brief synopsis of the caption. Headline is not the same as Title."
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.keywords",
                            "title": "Keywords",
                            "type": "simple_array",
                            "class": "required",
                            "help_text": "Keywords to express the subject of the image. Keywords may be free text and don't have to be taken from a controlled vocabulary. Codes from the controlled vocabulary IPTC Subject NewsCodes must go to the Subject Code field."
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.locationsShown",
                            "title": "Location Shown",
                            "class": "required",
                            "help_text": "The location the photo was taken.",
                            "type": "array",
                            "props": {
                                "countryCode": {
                                    "key": "countryCode",
                                    "title": "Country ISO Code",
                                    "type": "text",
                                    "help_text": "ISO code of the country the Location is located in"
                                },
                                "countryName": {
                                    "key": "countryName",
                                    "title": "Country Name",
                                    "type": "text",
                                    "help_text": "Name of the country the Location is located in"
                                },
                                "gpsAltitude": {
                                    "key": "gpsAltitude",
                                    "title": "GPS-Altitude",
                                    "type": "text",
                                    "help_text": "Altitude in meters of a WGS84 based position of this Location"
                                },
                                "gpsLatitude": {
                                    "key": "gpsLatitude",
                                    "title": "GPS-Lattitude",
                                    "type": "text",
                                    "help_text": "Lattitude of a WGS84 based position of this Location"
                                },
                                "gpsLongitude": {
                                    "key": "gpsLongitude",
                                    "title": "GPS-Longitude",
                                    "type": "text",
                                    "help_text": "Longitude of a WGS84 based position of this Location"
                                }
                            }
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.source",
                            "title": "Source",
                            "type": "textarea",
                            "class": "required",
                            "help_text": "The name of a person or party who has a role in the content supply chain. This could be an agency, a member of an agency, an individual or a combination. Source could be different from Creator and from the entities in the Copyright Notice."
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.supplier",
                            "title": "Supplier",
                            "class": "required",
                            "help_text": "Identifies the most recent supplier of the image, who is not necessarily its owner or creator.",
                            "type": "array",
                            "props": {
                                "name": {
                                    "key": "name",
                                    "title": "Name",
                                    "type": "text",
                                    "help_text": "Full name of the entity/concept"
                                },
                                "identifiers": {
                                    "key": "identifiers",
                                    "title": "Identifier",
                                    "class": "required",
                                    "type": "text",
                                    "help_text": "Globally unique identifier of the entity/concept"
                                }
                            }
                        },
                        {
                            "key": "image_description.iptc.photoVideoMetadataIPTC.usageTerms",
                            "title": "Usage Terms",
                            "type": "text",
                            "class": "required",
                            "help_text": "The licensing parameters of the image expressed in free-text."
                        },
                        {
                            "key": "image_description.license",
                            "title": "License",
                            "class": "required",
                            "type": "array",
                            "props": {
                                "name": {
                                    "key": "name",
                                    "title": "License",
                                    "type": "text"
                                },
                                "uri": {
                                    "key": "uri",
                                    "title": "URI",
                                    "type": "text"
                                }
                            }
                        },
                        {
                            "key": "image_description.Album",
                            "title": "Album",
                            "class": "required",
                            "type": "array",
                            "props": {
                                "name": {
                                    "key": "name",
                                    "title": "Name of Album",
                                    "type": "text"
                                },
                                "description": {
                                    "key": "description",
                                    "title": "Description",
                                    "type": "text"
                                },
                                "owner": {
                                    "key": "owner",
                                    "title": "Owner",
                                    "type": "text"
                                },
                                "uri": {
                                    "key": "uri",
                                    "title": "URI",
                                    "type": "text"
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "section",
                    "key": "document_tags",
                    "title": "Tags",
                    "class": "recommended",
                    "items": [
                        {
                            "key": "tags",
                            "title": "Tags",
                            "type": "array",
                            "props": {
                                "tag_group": {
                                    "key": "tag_group",
                                    "title": "Tag group",
                                    "type": "string"
                                },
                                "tag": {
                                    "key": "tag",
                                    "title": "Tag",
                                    "type": "string"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ]
}